@model List<Artigo>
<link rel="stylesheet" href="~/_css/artigos.css">
@if (TempData["Erro"] != null) {
    <div class="container-center">
        <div class="alert alert-danger" role="alert">
            @TempData["Erro"]
            <button type="button" class="btn btn-danger btn-sm close-alert error" aria-label="Close"><i class="fa fa-xmark"></i></button>
        </div>
    </div>
}
<section id="sectionLobby">
    <div class="container">
        <div class="row">
            <div class="col-md-12 capa">
                <h1 class="animation">
                    Logo abaixo você
                    pode
                    ler
                    vários artigos universitários sobre o mundo da "TI". É só escolher e clicar!
                </h1>
            </div>
        </div>
    </div>
</section>
<section id="navArtigos">
    <div class="container linksArtigos">
        <h2 id="tituloLer">Artigos.</h2>
        <div class="row arti">
            @if (Model.Any() || Model.Count != 0) {
                foreach (var item in Model) {
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@item.ReturnCategoria()</h5>
                                <p class="card-text">
                                    @item.SubTitulo
                                </p>
                                <a asp-action="Artigo" asp-controller="LerArtigos" asp-route-id="@item.Id" class="btn btn-outline-dark ler">Leia!</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else {
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title" style="text-align: center;">Gambiarra Brasil</h5>
                            <p class="card-text" style="text-align: center;">
                               Nenhum artigo adicionado, adicione seu artigo para que as pessoas possam ler e aprender!
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
